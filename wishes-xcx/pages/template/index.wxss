@import "../wxParse/wxParse.wxss";
page{background:#000;}
.main{position:relative; }
.advtor{
    width: 100%;
    margin-top:150rpx;
    display: flex;
    flex-direction:column;
    align-items: center;
}
.advtor image{
  height:180rpx;
  width:180rpx;
  border-radius: 50%;
}
.advtor text{
  font-size:32rpx;
  padding:20rpx 40rpx;
  margin:40rpx 0 100rpx 0;
  background:yellow;
  color:red;
}
.content-main{
  width:100%;
  margin:0 auto;
  color:#fff;
}
.music-box{
  width:65rpx;
  height:75rpx;
  position: fixed;
  top:130rpx;
  right:2%;
}
.audiobox{display: none;}
.music-box image{
  width:65rpx;
  height:65rpx;
}
.morezf{
  width:110rpx;
  height:120rpx;
  position: fixed;
  right:0;
  top:45%;
}
.morezf image{
  width:110rpx;
  height:110rpx;
}

.footer-btn{
  position: fixed;
  bottom:110rpx;
  left:10%;
  width:80%;
}
.footer-btn button{
  background:green;
  color:#fff;
  font-size:36rpx;
  font-weight:normal;
}

.alink{
  width:80%;
  margin:0 auto;
  margin-top: 50rpx;
  
}
.header{
  width:100%;
}
.header image{
  width:100%;
}
.alink image{
  width:100%;
}
.footer-pic{
  padding-top:0rpx;
  width:100%;
}
.footer-pic image{
  width:100%;
